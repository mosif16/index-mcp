{
  "name": "index-mcp",
  "version": "0.1.0",
  "description": "MCP server that ingests a codebase into a local SQLite index at the repo root.",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "exports": {
    ".": "./dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --project tsconfig.json",
    "dev": "tsx src/server.ts",
    "watch": "tsx src/server.ts --watch",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "test": "tsx tests/run-all.ts"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "@index-mcp/native": "file:crates/index_mcp_native",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^3.6.0",
    "express": "^5.1.0",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.2",
    "typescript": "^5.6.2",
    "zod": "^3.23.8",
    "@xenova/transformers": "^2.14.0",
    "pino": "^9.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.2",
    "@types/node": "^22.7.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "globals": "^15.15.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.8",
    "tsx": "^4.19.0"
  }
}
